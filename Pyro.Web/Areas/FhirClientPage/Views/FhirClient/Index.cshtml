@*@model Pyro.Web.Areas.FhirClientPage.Controllers.FhirClientController*@
@model Pyro.Web.Areas.FhirClientPage.Models.FhirClientViewModel

@{
  ViewBag.Title = "Pyro FHIR Client";
}


<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-9">
          <h4>Pyro Server</h4>
        </div>
        <div class="col-sm-3">
          <img class="img-responsive" src="~/Content/Images/PyroIcon-100.png" alt="Pyro" />
        </div>
      </div>

      <p>
        <div id="the-basics">
          <input class="typeahead form-control" type="text" placeholder="Resource Name">
        </div>
      </p>

      <ul class="nav nav-pills">
        <li class="active"><a data-toggle="pill" href="#jsonPill">JSON</a></li>
        <li><a data-toggle="pill" href="#xmlPill">XML</a></li>
        <li><a data-toggle="pill" href="#treePill">Tree</a></li>
      </ul>

      <div class="tab-content">
        <div id="jsonPill" class="tab-pane fade in active">
          <p>
            <pre><code id="fhirjson">FHIR Resource Loading...</code></pre>
          </p>
        </div>
        <div id="xmlPill" class="tab-pane fade">
          <p>
            <pre><code id="fhirxml">FHIR Resource Loading...</code></pre>
          </p>
        </div>
        <div id="treePill" class="tab-pane fade">
          <p>
            <pre><code id="fhirtree">FHIR Resource Loading...</code></pre>
          </p>
        </div>
      </div>


    </div>
  </div>
</div>
<script>
  $(document).ready(function () {
    OnPageLoad('@Model.ServiceBaseRoot')
  })

</script>




